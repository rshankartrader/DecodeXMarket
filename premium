                url: "https://in.tradingview.com/script/Zio7a4g2-Wizard-5min-Candle-Targets/",
                image: "img/wizard-5min.png",
                category: "Patterns",
                features: ["5-min patterns", "Target prediction", "Candle analysis", "Entry signals", "Scalping"]
            },
            {
                id: 14,
                name: "Gann Top Bottom Squaring Tool",
                description: "Gann squaring tool for identifying tops and bottoms in price action",
                price: 999,
                originalPrice: 1499,
                hero: false,
                url: "https://in.tradingview.com/script/sNlW6YW4-Gann-Top-Bottom-Squaring-Tool/",
                image: "img/gann-squaring.png",
                category: "Gann Theory",
                features: ["Squaring tool", "Top/bottom ID", "Price/time square", "Geometric analysis", "Precise"]
            }
        ];

        // ===== EXACT HEADER FUNCTIONALITY FROM HOMEPAGE =====
        function initializeHeader() {
            const menuToggle = document.getElementById('menuToggle');
            const mobileMenu = document.getElementById('mobileMenu');
            const menuIcon = document.getElementById('menuIcon');
            const logoutButton = document.getElementById('logoutButton');
            const mobileLogoutButton = document.getElementById('mobileLogoutButton');
            const refreshButton = document.getElementById('refreshButton');
            const logoButton = document.getElementById('logoButton');
            
            // Menu toggle
            if (menuToggle) {
                menuToggle.addEventListener('click', toggleMenu);
            }
            
            // Logo click
            if (logoButton) {
                logoButton.addEventListener('click', () => {
                    window.location.href = 'index.html';
                });
            }
            
            // Refresh button
            if (refreshButton) {
                refreshButton.addEventListener('click', () => {
                    refreshButton.classList.add('refreshing');
                    setTimeout(() => {
                        refreshButton.classList.remove('refreshing');
                        showNotification('Page refreshed!', 'success');
                    }, 800);
                });
            }
            
            // Logout buttons
            if (logoutButton) {
                logoutButton.addEventListener('click', () => {
                    showNotification('Logged out successfully!', 'success');
                    setTimeout(() => {
                        window.location.href = 'index.html';
                    }, 1500);
                });
            }
            
            if (mobileLogoutButton) {
                mobileLogoutButton.addEventListener('click', () => {
                    showNotification('Logged out successfully!', 'success');
                    setTimeout(() => {
                        window.location.href = 'index.html';
                    }, 1500);
                });
            }
            
            // Close menu when clicking outside
            document.addEventListener('click', function(event) {
                if (mobileMenu && mobileMenu.classList.contains('open') && 
                    !mobileMenu.contains(event.target) && 
                    !menuToggle.contains(event.target)) {
                    closeMenu();
                }
            });
            
            // Close menu with Escape key
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    closeMenu();
                }
            });
            
            // Menu Item Animations
            const navButtons = document.querySelectorAll('.nav-button');
            navButtons.forEach(button => {
                button.addEventListener('click', function() {
                    closeMenu();
                });
            });
        }
        
        function toggleMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            const menuToggle = document.getElementById('menuToggle');
            const menuIcon = document.getElementById('menuIcon');
            
            if (mobileMenu && menuToggle && menuIcon) {
                const isOpen = mobileMenu.classList.contains('open');
                
                if (isOpen) {
                    closeMenu();
                } else {
                    mobileMenu.classList.add('open');
                    menuToggle.classList.add('active');
                    menuIcon.className = 'fas fa-times';
                }
            }
        }
        
        function closeMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            const menuToggle = document.getElementById('menuToggle');
            const menuIcon = document.getElementById('menuIcon');
            
            if (mobileMenu && menuToggle && menuIcon) {
                mobileMenu.classList.remove('open');
                menuToggle.classList.remove('active');
                menuIcon.className = 'fas fa-bars';
            }
        }

        // ===== INDICATORS MARKETPLACE =====
        function initializeIndicatorsPage() {
            const indicatorsGrid = document.getElementById('indicatorsGrid');
            
            // Render all indicators
            indicators.forEach(indicator => {
                const indicatorCard = createIndicatorCard(indicator);
                indicatorsGrid.appendChild(indicatorCard);
            });

            // Initialize WhatsApp payment button
            const whatsappPaymentBtn = document.getElementById('whatsappPaymentBtn');
            if (whatsappPaymentBtn) {
                whatsappPaymentBtn.addEventListener('click', openWhatsAppPayment);
            }
        }

        function createIndicatorCard(indicator) {
            const card = document.createElement('div');
            card.className = `indicator-card ${indicator.hero ? 'hero' : ''}`;
            card.dataset.id = indicator.id;
            
            let heroBadge = '';
            if (indicator.hero) {
                heroBadge = `<div class="hero-badge"><i class="fas fa-star"></i> HERO</div>`;
            }
            
            const originalPriceHtml = indicator.originalPrice ? 
                `<span class="original-price">₹${indicator.originalPrice}</span>` : '';
            
            card.innerHTML = `
                ${heroBadge}
                <div class="indicator-number">${indicator.id}</div>
                <h3 class="indicator-name">${indicator.name}</h3>
                <p class="indicator-description">${indicator.description}</p>
                <div class="indicator-price">
                    <div class="price-tag">₹${indicator.price}</div>
                    ${originalPriceHtml}
                </div>
                <div class="card-actions">
                    <button class="see-more-btn" onclick="showIndicatorDetail(${indicator.id})">
                        <i class="fas fa-eye"></i> See More
                    </button>
                    <button class="buy-now-btn" onclick="buyIndicator(${indicator.id})">
                        <i class="fas fa-shopping-cart"></i> Buy Now
                    </button>
                </div>
            `;
            
            return card;
        }

        // ===== INDICATOR DETAIL PAGE =====
        function showIndicatorDetail(indicatorId) {
            const indicator = indicators.find(i => i.id == indicatorId);
            if (!indicator) return;
            
            // Hide marketplace, show detail page
            document.getElementById('indicatorsPage').style.display = 'none';
            document.getElementById('indicatorDetailPage').classList.add('active');
            
            // Update detail page content
            document.getElementById('detailTitle').textContent = indicator.name;
            document.getElementById('detailPrice').textContent = `₹${indicator.price}`;
            document.getElementById('detailType').textContent = indicator.category;
            document.getElementById('detailDescription').textContent = indicator.description;
            
            // Update TradingView link
            const tradingViewLink = document.getElementById('tradingViewLink');
            const viewTradingViewBtn = document.getElementById('viewTradingView');
            if (tradingViewLink) {
                tradingViewLink.href = indicator.url;
            }
            if (viewTradingViewBtn) {
                viewTradingViewBtn.onclick = () => window.open(indicator.url, '_blank');
            }
            
            // Update info list
            const infoList = document.getElementById('detailInfo');
            infoList.innerHTML = `
                <li><strong>Category:</strong> ${indicator.category}</li>
                <li><strong>Price:</strong> ₹${indicator.price} ${indicator.originalPrice ? `(₹${indicator.originalPrice})` : ''}</li>
                <li><strong>Platform:</strong> TradingView</li>
                <li><strong>Access:</strong> Lifetime</li>
                <li><strong>Updates:</strong> Included</li>
                <li><strong>Support:</strong> Email & WhatsApp</li>
            `;
            
            // Update features list
            const featuresList = document.getElementById('detailFeatures');
            featuresList.innerHTML = '';
            indicator.features.forEach(feature => {
                const li = document.createElement('li');
                li.innerHTML = `<strong>✓</strong> ${feature}`;
                featuresList.appendChild(li);
            });
            
            // Update buy button
            const buyButton = document.getElementById('buyThisIndicator');
            if (buyButton) {
                buyButton.onclick = () => buyIndicator(indicator.id);
            }
            
            // Update image placeholder
            const chartPlaceholder = document.querySelector('.chart-placeholder');
            if (chartPlaceholder) {
                chartPlaceholder.innerHTML = `
                    <div style="text-align: center;">
                        <i class="fas fa-chart-line" style="font-size: 3rem; margin-bottom: 10px; color: var(--theme-primary);"></i>
                        <div style="margin: 10px 0; color: var(--theme-light); font-weight: 600;">${indicator.name}</div>
                        <div class="chart-info">Preview image: ${indicator.image}</div>
                    </div>
                `;
            }
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function hideIndicatorDetail() {
            document.getElementById('indicatorsPage').style.display = 'block';
            document.getElementById('indicatorDetailPage').classList.remove('active');
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // ===== BUY INDICATOR FUNCTION =====
        function buyIndicator(indicatorId) {
            const indicator = indicators.find(i => i.id == indicatorId);
            if (!indicator) return;
            
            openWhatsAppPayment(indicator);
        }

        // ===== WHATSAPP PAYMENT FUNCTIONALITY =====
        function openWhatsAppPayment(indicator = null) {
            const phoneNumber = "918271890090";
            let message = "Hi, I want to purchase indicator(s) from DecodeXMarket.\n\n";
            message += "My details:\n";
            message += "User Name: \n";
            message += "Email: \n";
            message += "Phone (WhatsApp): \n\n";
            
            if (indicator) {
                message += `Indicator I want: ${indicator.name}\n`;
                message += `Price: ₹${indicator.price}\n`;
            } else {
                message += "I want to purchase multiple indicators.\n";
            }
            
            message += "\nPayment made to UPI ID: thersk@axl\n";
            message += "Payment screenshot is attached.\n\n";
            message += "Please activate my access.";
            
            const encodedMessage = encodeURIComponent(message);
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
            
            window.open(whatsappUrl, '_blank');
        }

        // ===== NOTIFICATION SYSTEM =====
        function showNotification(message, type = "success") {
            // Remove existing notifications
            document.querySelectorAll('.notification').forEach(n => n.remove());
            
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.style.cssText = `
                position: fixed;
                top: 90px;
                right: 20px;
                background: ${type === 'error' ? '#f43f5e' : type === 'warning' ? '#f39c12' : '#10b981'};
                color: white;
                padding: 15px 25px;
                border-radius: 12px;
                z-index: 10000;
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                animation: slideIn 0.3s ease;
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255,255,255,0.2);
                max-width: 300px;
                font-weight: 600;
            `;
            notification.innerHTML = `
                <i class="fas fa-${type === 'error' ? 'exclamation-triangle' : type === 'warning' ? 'exclamation-circle' : 'check-circle'}"></i> 
                ${message}
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.remove();
                    }
                }, 300);
            }, 3000);
        }

        // Add CSS animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            @keyframes slideOut {
                from { transform: translateX(0); opacity: 1; }
                to { transform: translateX(100%); opacity: 0; }
            }
        `;
        document.head.appendChild(style);

        // ===== INITIALIZATION =====
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize header (exact same as homepage)
            initializeHeader();
            
            // Initialize indicators page
            initializeIndicatorsPage();
            
            // Initialize back button
            const backButton = document.getElementById('backToMarketplace');
            if (backButton) {
                backButton.addEventListener('click', hideIndicatorDetail);
            }
            
            // Check URL for indicator ID (for direct linking)
            const urlParams = new URLSearchParams(window.location.search);
            const indicatorId = urlParams.get('indicator');
            if (indicatorId) {
                showIndicatorDetail(parseInt(indicatorId));
            }
        });
    </script>
</body>
</html>
